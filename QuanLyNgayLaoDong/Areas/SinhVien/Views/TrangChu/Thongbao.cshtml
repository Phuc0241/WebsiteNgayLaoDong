@using PagedList;
@using PagedList.Mvc;
@model IPagedList<QuanLyNgayLaoDong.Areas.SinhVien.Modelview.DotLaoDongViewModel>

@{
    ViewBag.Title = "Thông Báo Đợt Lao Động";
    Layout = "~/Areas/SinhVien/Views/Shared/_LayoutSinhVien1.cshtml";
    ViewBag.ContentNoPadding = true;
    <link href="~/Content/sinhvien/CSS/thongbao1.css" rel="stylesheet" />
}

<h3 class="custom-title" style="text-align:center">DANH SÁCH ĐỢT LAO ĐỘNG</h3>


<style>
    .pagination {
        justify-content: center;
    }

        .pagination li {
            display: inline-block;
            margin: 0 3px;
        }

            .pagination li a, .pagination li span {
                padding: 5px 10px;
                border-radius: 5px;
                color: #007bff;
                text-decoration: none;
                border: 1px solid #dee2e6;
            }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
            }
</style>

<div class="custom-table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>Đợt Lao Động</th>
                <th>Ngày Lao Động</th>
                <th>Khu Vực</th>
                <th>Buổi</th>
                <th>Loại</th>
                <th>Giá Trị</th>
                <th>Mô Tả</th>
                <th>Thời Gian</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dot in Model)
            {
                <tr>
                    <td>@dot.DotLaoDong</td>
                    <td>@dot.NgayLaoDong.ToString("dd/MM/yyyy")</td>
                    <td>@dot.KhuVuc</td>
                    <td>@dot.Buoi</td>
                    <td>@dot.LoaiLaoDong</td>
                    <td>@dot.GiaTri ngày</td>
                    <td class="mo-ta">@dot.MoTa</td>
                    <td>@dot.ThoiGian</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <br />
        <br />
        @Html.PagedListPager(Model, page => Url.Action("ThongBao", new { page }), new PagedListRenderOptions
        {
            Display = PagedListDisplayMode.IfNeeded,
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 5
        })
    </div>
</div>
