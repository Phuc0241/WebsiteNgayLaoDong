@using PagedList;
@using PagedList.Mvc;
@model IPagedList<QuanLyNgayLaoDong.Areas.LopTruong.ViewModel.DotLaoDongLopTruongViewModel>

@{
    ViewBag.Title = "Thông Báo Đợt Lao Động";
    Layout = "~/Areas/LopTruong/Views/Shared/_LayoutLopTruong1.cshtml";
    <link href="~/Content/sinhvien/CSS/thongbao1.css" rel="stylesheet" />
}
<style>
    .pagination {
        justify-content: center;
    }

        .pagination li {
            display: inline-block;
            margin: 0 3px;
        }

            .pagination li a, .pagination li span {
                padding: 5px 10px;
                border-radius: 5px;
                color: #007bff;
                text-decoration: none;
                border: 1px solid #dee2e6;
            }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
            }
</style>
<h3 class="mb-4" style="text-align:center">DANH SÁCH ĐỢT LAO ĐỘNG</h3>

<div class="custom-table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>Đợt lao động</th>
                <th>Khu vực</th>
                <th>Loại lao động</th>
                <th>Ngày lao động</th>
                <th>Buổi</th>
                <th>Ngày được cộng</th>
                <th>Thời gian</th>
                <th>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dot in Model)
            {
                <tr>
                    <td>@dot.DotLaoDong</td>
                    <td>@dot.KhuVuc</td>
                    <td>@dot.LoaiLaoDong</td>
                    <td>@dot.NgayLaoDong.ToString("dd/MM/yyyy")</td>
                    <td>@dot.Buoi</td>
                    <td>@dot.GiaTri ngày</td>
                    <td>@dot.ThoiGian</td>
                    <td>@dot.MoTa</td>
                </tr>
            }
        </tbody>

    </table>

    <div class="text-center">
        <br />
        <br />
        @Html.PagedListPager(Model, page => Url.Action("ThongBao", new { page }), new PagedListRenderOptions
        {
            Display = PagedListDisplayMode.IfNeeded,
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 5
        })
    </div>
</div>