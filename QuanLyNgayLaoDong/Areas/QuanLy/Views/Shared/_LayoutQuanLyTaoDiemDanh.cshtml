<html5>
    <head>
        <link rel="stylesheet" href="@Url.Content("~/Content/Admin/css/layout.css")">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="~/Areas/Admin/Javascript/AdminshareJavaScript.js"></script>
        @RenderSection("Styles", required: false)

    </head>
    <body style="overflow-x: hidden;">
        <!-- Ngăn chặn thanh cuộn ngang -->
        <div class="d-flex">
            <!-- Sidebar -->
            <aside class="bg-white  shadow m-4 rounded-5 pb-4"
                   style="width: 260px; min-height: 95vh; left: 0; top: 0;">
                <div class="p-3">
                    <a class="navbar-brand d-flex align-items-center" href="#">
                        <img src="@Url.Content("~/Content/Admin/Image/Screenshot 2025-02-23 214442.png")" style="height:40px;width:40px" alt="main_logo">
                        <span class="ms-2 fw-bold grayColor">XIN CHÀO, ADMIN</span>
                    </a>
                </div>
                <hr class="hr">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a href="/Admin/AdminHome/Index" class="nav-link active">
                            <i class="fa-solid fa-tv"></i>
                            <span>HOME</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("TrangTaiKhoan", "AdminHome", new { area = "Admin" })" class="nav-link">
                            <i class="fa fa-list-alt"></i>
                            <span>TÀI KHOẢN</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("TrangTaoDotLaoDong", "AdminHome", new { area = "QuanLy" })" class="nav-link">
                            <i class="fa fa-calendar-plus"></i>
                            <span>Tạo Đợt LĐ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("TaoMa", "TaoDiemDanh", new { area = "QuanLy" })" class="nav-link">
                            <i class="fa fa-calendar-plus"></i>
                            <span>Tạo Điểm Danh</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("DiemDanhHomNay", "TaoDiemDanh", new { area = "QuanLy" })" class="nav-link">
                            <i class="fa fa-calendar-plus"></i>
                            <span>Điểm Danh Hôm Nay</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("DanhSachTheoNgay", "TaoDiemDanh", new { area = "QuanLy" })" class="nav-link">
                            <i class="fa fa-calendar-plus"></i>
                            <span>Danh Sách Theo Ngày</span>
                        </a>
                    </li>
                </ul>
            </aside>

            <!-- Main Content -->
            <main class="main-content flex-grow-1 position-relative border-radius-lg"
                  style=" padding: 20px; width: calc(100% - 280px);">
                <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl">
                    <div class="container-fluid py-1 px-3">
                        <a href="@Url.Action("Index", "AdminHome", new { area = "Admin" })">
                            <img src="@Url.Content("~/ANH/Logodaxoanen.png")"
                                 style="object-fit: cover; margin-right: 20px; transition: filter 0.3s ease;"
                                 onmouseover="this.style.filter='brightness(1.3)'"
                                 onmouseout="this.style.filter='brightness(1)'" />
                        </a>
                        @*<h6 class="font-weight-bolder text-white mb-0">ĐỒNG THÁP UNIVERSITY</h6>*@
                        <div class="collapse navbar-collapse" id="navbar">
                            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                                <button class="timkiem" onclick="openModal()">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    Sign out
                                </button>
                                <!-- Modal xác nhận -->
                                <div id="confirmationModal" class="modal">
                                    <div class="modal-content">
                                        <div class="modal-text">
                                            <p>Bạn có chắc chắn muốn đăng xuất?</p>
                                            <div class="modal-buttons">
                                                <!-- Truyền URL từ Razor vào attribute -->
                                                <button class="btn-xoa" onclick="window.location.href='@Url.Action("Login", "Login", new { area = "" })'">Có</button>
                                                <button class="btn-huy" onclick="closeModal()">Hủy</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>
        </div>
        @RenderSection("Scripts", required: false)

    </body>
</html5>