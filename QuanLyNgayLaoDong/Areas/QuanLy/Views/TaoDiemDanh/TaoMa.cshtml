@{
    ViewBag.Title = "Tạo mã điểm danh";
    Layout = "~/Areas/QuanLy/Views/Shared/_LayoutQuanLyTaoDiemDanh.cshtml";
}

<h2>Tạo mã điểm danh</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">@ViewBag.Message</div>
}
else if (ViewBag.MaMoi != null)
{
    <div class="alert alert-success">Mã điểm danh của bạn là: <strong>@ViewBag.MaMoi</strong></div>
    <p>Mã có hiệu lực trong 30 phút.</p>
    <a href="@Url.Action("DanhSach", "TaoDiemDanh", new { ma = ViewBag.MaMoi })">Xem danh sách đã điểm danh</a>
}
